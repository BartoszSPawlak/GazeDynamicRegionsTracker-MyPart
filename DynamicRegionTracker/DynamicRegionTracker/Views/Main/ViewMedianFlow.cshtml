@model DynamicRegionsTracker.Models.ModelMedianFlow

@{
    ViewData["Title"] = "ViewMedianFlow";
}

<hr />
<div class="row" style="width: 130%;">
    @*<div class="col-md-4">*@
        <form asp-action="ViewMedianFlow">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="width: 45%; margin-right:5%; float: left;">
                
                <div class="form-group">
                    <label asp-for="pointslnGrid" class="control-label"></label>
                    <input id="pointslnGrid" type="number" min="0" max="1000" step="1" value="10" asp-for="pointslnGrid" class="formStyle oneInput" />
                    <span asp-validation-for="pointslnGrid" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="MaxLevel" class="formLabel"></label>
                    <input id="MaxLevel" type="number" min="0" max="1000" step="1" value="5" asp-for="MaxLevel" class="formStyle oneInput" />
                    <span asp-validation-for="MaxLevel" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="TermCriteriaMaxIter" class="formLabel"></label>
                    <input id="TermCriteriaMaxIter" type="number" min="0" max="1000" step="1" value="20" asp-for="TermCriteriaMaxIter" class="formStyle oneInput" />
                    <span asp-validation-for="TermCriteriaMaxIter" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="MaxMedianLengthOfDisplacement" class="formLabel"></label>
                    <input id="MaxMedianLengthOfDisplacement" type="number" min="0.000" max="1000.000" step="0.001" value="10.000" asp-for="MaxMedianLengthOfDisplacement" class="formStyle oneInput" />
                    <span asp-validation-for="MaxMedianLengthOfDisplacement" class="text-danger"></span>
                </div>
            </div>
            <div style="width: 35%; margin-right:5%; float: left;">
                <label class="control-label">WinSize</label>
                <div class="form-group">
                    @*<label asp-for="WinSize1" class="control-label"></label>*@
                    
                    <input id="WinSize1" type="number" min="0" max="1000" step="1" value="3" asp-for="WinSize1" class="formStyle twoInputsSideBySide" />
                    <span asp-validation-for="WinSize1" class="text-danger"></span>
                    <input id="WinSize2" type="number" min="0" max="1000" step="1" value="3" asp-for="WinSize2" class="formStyle twoInputsSideBySide secondOfTwo"/>
                    <span asp-validation-for="WinSize2" class="text-danger"></span>
                </div>
                <label class="formLabel">WinSizeNCC</label>
                <div class="form-group">
                    @*<label asp-for="WinSizeNCC1" class="control-label"></label>*@
                    
                    <input id="WinSizeNCC1" type="number" min="0" max="1000" step="1" value="30" asp-for="WinSizeNCC1" class="formStyle twoInputsSideBySide" />
                    <span asp-validation-for="WinSizeNCC1" class="text-danger"></span>
                    <input id="WinSizeNCC2" type="number" min="0" max="1000" step="1" value="30" asp-for="WinSizeNCC2" class="formStyle twoInputsSideBySide secondOfTwo" />
                    <span asp-validation-for="WinSizeNCC2" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TermCriteriaEps" class="formLabel"></label>
                    <input id="TermCriteriaEps" type="number" min="0.000" max="1.000" step="0.001" value="0.300" asp-for="TermCriteriaEps" class="formStyle oneInput" />
                    <span asp-validation-for="TermCriteriaEps" class="text-danger"></span>
                </div>
            </div>
        </form>
    @*</div>*@
</div>

