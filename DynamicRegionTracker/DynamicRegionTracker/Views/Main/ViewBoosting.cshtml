@model DynamicRegionsTracker.Models.ModelBoosting

@{
    ViewData["Title"] = "ViewBoosting";
}

<hr />
<div class="row" style="width: 130%;">
    @*<div class="col-md-4">*@
        <form asp-action="ViewBoosting">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="width: 40%; margin-right:5%; float: left;">
            <div class="form-group">
                <label asp-for="NumClassifiers" class="control-label"></label>
                <input id="NumClassifiers" type="number" min="0" max="1000" step="1" value="100" asp-for="NumClassifiers" class="formStyle oneInput"/>
                <span asp-validation-for="NumClassifiers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SampleOverlap" class="formLabel"></label>
                <input id="SampleOverlap" type="number" min="0" max="1" step="0.00001" value="0.990" asp-for="SampleOverlap" class="formStyle oneInput"/>
                <span asp-validation-for="SampleOverlap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FeatureSetNumFeatures" class="formLabel"></label>
                <input id="FeatureSetNumFeatures" type="number" min="0" max="1" step="0.00001" value="1050" asp-for="FeatureSetNumFeatures" class="formStyle oneInput"/>
                <span asp-validation-for="FeatureSetNumFeatures" class="text-danger"></span>
            </div>
            </div>
            <div style="width: 40%; float: left;">
                <div class="form-group">
                    <label asp-for="SampleSearchFactor" class="control-label"></label>
                    <input id="SampleSearchFactor" type="number" min="0.00" max="100.00" step="0.01" value="1.80" asp-for="SampleSearchFactor" class="formStyle oneInput"/>
                    <span asp-validation-for="SampleSearchFactor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IterationInit" class="formLabel"></label>
                    <input id="IterationInit" type="number" min="0" max="1" step="0.00001" value="50" asp-for="IterationInit" class="formStyle oneInput"/>
                    <span asp-validation-for="IterationInit" class="text-danger"></span>
                </div>
            </div>
        </form>
    @*</div>*@
</div>

